\renewcommand\frontmatter{%
  \if@openright
    \cleardoublepageEmpty
  \else
    \clearpage
  \fi
  \@mainmatterfalse
  \pagenumbering{roman}
  \InputIfFileExists{front.tex}
    {}{\PackageError{\RSTreport}{Couldn't find file front.tex}{}}
  \setcounter{page}{3}}
\renewcommand\mainmatter{%
  \if@openright
    \cleardoublepage
  \else
    \clearpage
  \fi
  \@mainmattertrue
  \pagenumbering{arabic}}
\renewcommand\backmatter{%
  \if@openright
    \cleardoublepage
  \else
    \clearpage
  \fi
  \@mainmatterfalse
